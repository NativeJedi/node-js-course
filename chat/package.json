{
  "name": "rxjs-nest-chat-monorepo",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "docker compose -f docker-compose.yml up --build --scale server=2",
    "build": "pnpm -r run build",
    "start:prod": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "clear-db": "pnpm --filter server run clear-db",
    "clean": "rm -rf node_modules ./server/node_modules ./server/dist ./server/db ./server/uploads ./client/node_modules ./client/dist"
  },
  "devDependencies": {
    "pnpm": "^9.2.0"
  }
}
